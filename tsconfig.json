{
  "compilerOptions": {
    "noEmitOnError": true,
    "diagnostics": true,
    "lib": ["es2018", "esnext"],

    "target": "es2017",

    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,

    "jsx": "react",

    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "exclude": ["coverage", "dist", "tests/testcases"]
}
